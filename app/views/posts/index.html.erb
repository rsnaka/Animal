<% @posts.each do |post| %>
  <div class="social"></div>
  　<div>
      <p><%= image_tag '20200809_133600.jpg', class: "rounded-circle", size: "48x48" %></p>
      <i class="fa-regular fa-user"></i><%= post.user.name %>
      <%= image_tag post.image, size: "100x100" %>
      <p>Title：<%= post.title %></p>
      <p>Body：<%= post.body %></p>
      <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>
      <%= link_to "new post", new_post_path %> /
      <%= link_to "show", post_path(post.id) %>
    </div>
</div>
<% end %>


