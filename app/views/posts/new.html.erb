<h1>NEW Post</h1>
<% if @new_post.errors.full_messages.present? %>
  <% @new_post.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>
<%= form_with model: @new_post do |f| %>
  <div class="custom-file mb-3">
    <%= f.file_field :image, class: "custom-file-input", accept: "image/*" %>
    <%= f.label :image, class: "custom-file-label" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <%= f.submit '投稿' %>
<% end %>

